<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("includes/head.ejs") %>
    <title>Anigram . Home</title>
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>
    <%- include('includes/navigation.ejs') %>
    <div class="main-area">
      <div class="stories">
        <% Object.keys(data).forEach(animalKey => { %>
        <a href="/ig/<%= animalKey %>" class="story">
          <img
            src="<%= data[animalKey].profile %>"
            alt="<%= data[animalKey].name %>"
          />
          <p><%= data[animalKey].name %></p>
        </a>
        <% }); %>
      </div>
      <div class="content-area">
        <div class="main-content">
          <% posts.forEach(post => { 
            const randomIndex = Math.floor(Math.random() * post.mainImgs.length); 
            const randomMainImg = post.mainImgs[randomIndex]; %>
          <div class="content">
            <div class="post">
              <div class="user-info">
                <div class="pic-name-location">
                  <a href="/ig/<%= post.animal %>">
                    <img
                      src="<%= post.profileImg %>"
                      onerror="this.hidden = true"
                      id="profileImg"
                    />
                  </a>
                  <div class="userData">
                    <p class="userId"><%= post.userId %></p>
                    <p class="location"><%= post.location %></p>
                  </div>
                </div>
                <div class="followBtn">
                  <button class="button-23" role="button">Follow</button>
                </div>
              </div>
              <div class="mainImage">
                <img
                  src="<%= randomMainImg %>"
                  onerror="this.hidden = true"
                  id="mainImg"
                />
              </div>
              <div class="interactions">
                <div class="like">
                  <i class="fa-regular fa-heart" id="lkicon"></i>
                  <p class="lkcount">
                    <%= Math.floor(Math.random() * 500) + 50 %>
                  </p>
                </div>
                <div class="comment">
                  <i class="fa-regular fa-comment"></i>
                  <p class="cmtcount">
                    <%= Math.floor(Math.random() * 150) + 10 %>
                  </p>
                </div>
                <div class="share">
                  <i class="fa-solid fa-share"></i>
                  <p class="shrcount">
                    <%= Math.floor(Math.random() * 50) + 3 %>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
    <div class="suggestion">
      <div class="text">
        <p class="sugg">Suggested for you</p>
        <p class="see">See all</p>
      </div>
      <div class="suggrows">
        <% Object.keys(data).forEach(animalKey => { %>
        <div class="row">
          <a href="/ig/<%= animalKey %>">
            <img
              src="<%= data[animalKey].profile %>"
              alt="<%= data[animalKey].name %>"
              class="rowImg"
            />
          </a>
          <div class="bound">
            <p class="name"><%= data[animalKey].name %></p>
            <p>Followed by Jack123</p>
          </div>
          <p class="follow">Follow</p>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
